#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    double n1, n2, n3;
    scanf("%lf%lf/n",&n1,&n2);
    while (n2<=1000000)
    {   scanf("%lf%lf/n",&n1,&n2);
        int maior=0;
        for
        (int n3 = n2; n3<=n2; n3++)
        {
         int ciclo = 0;
         int numero = n3;
         while(numero!=1)
         {
         if(n3 % 2==0)
         {n3 = n3/2;}
         if(n3%2!=0)
         {n3 = (n3 * 3)+1;}
         }
            ciclo++;
        }      
    }printf("%lf %lf %lf\n",n1,n2,n3);
return 0;}
